{% extends "layouts/main_layout.html.twig" %}

{% block title %}Create Person{% endblock %}

{% block main_content %}
	<div class="row">
		<div class="col s12 m12 l12">
			{{ form_start(create_person_form_view) }}
				<div class="card">
					<div class="card-content">
						<span class="card-title">Create Person</span>
						<div class="row">
							<div class="col s12 m5 l5">
								<div class="row">
									<div class="input-field col s12">
										{{ form_widget(create_person_form_view.last_name, {'id': 'last-name', 'attr': {'class': 'validate', 'pattern': '[A-Za-z]+', 'title': 'Alphabetic characters only'}}) }}
										{# <input type="text" name="last_name" id="last-name" class="validate" minlength="2" maxlength="50" required/> #}
										<label for="last-name">Last name</label>
									</div>
									<div class="input-field col s12">
										{{ form_widget(create_person_form_view.first_name, {'id': 'first-name', 'attr': {'class': 'validate', 'pattern': '[A-Za-z]+', 'title': 'Alphabetic characters only'}}) }}
										{# <input type="text" name="first_name" id="first-name" class="validate" minlength="2" maxlength="50" required/> #}
										<label for="first-name">First name</label>
									</div>
									<div class="input-field col s12">
										{{ form_widget(create_person_form_view.username, {'id': 'username', 'attr': {'class': 'validate'}}) }}
										{# <input type="email" name="username" id="username" class="validate" minlength="5" maxlength="200" required/> #}
										<label for="username">Username</label>
									</div>
									<div class="input-field col s12">
										{{ form_widget(create_person_form_view.password, {'id': 'passsword', 'attr': {'class': 'validate', 'pattern': '\\S+', 'title': 'Spaces not allowed'}}) }}
										{# <input type="password" name="password" id="password" class="validate" minlength="7" maxlength="11" required/> #}
										<label for="password">Password</label>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="card-action right-align">
						<input type="submit" class="waves-effect waves-light btn" value="Save">
					</div>
				</div>
			{{ form_end(create_person_form_view) }}
		</div>
	</div>
{% endblock %}